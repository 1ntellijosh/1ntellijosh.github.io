{
  // Editor settings
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  
  // Language-specific settings for TypeScript and TSX
  "[typescript]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": null
  },
  "[typescriptreact]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": null
  },
  
  // Also set for JavaScript/JSX for consistency
  "[javascript]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[javascriptreact]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  
  // JSON files
  "[json]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  
  // CSS files
  "[css]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  }
}

